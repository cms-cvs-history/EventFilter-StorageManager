<?xml version='1.0'?>
<xc:Partition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
              xmlns:soapenc="http://schemas.xmlsoap.org/soap/encoding/" 
              xmlns:xc="http://xdaq.web.cern.ch/xdaq/xsd/2004/XMLConfiguration-30">

    <i2o:protocol xmlns:i2o="http://xdaq.web.cern.ch/xdaq/xsd/2004/I2OConfiguration-30">
       <i2o:target class="evf::BU" instance="0" tid="24"/>
       <i2o:target class="evf::FUResourceBroker" instance="0" tid="25"/>
       <i2o:target class="StorageManager" instance="0" tid="22"/>
    </i2o:protocol>

<!-- BU / BROKER CONTEXT -->
  <xc:Context url="http://cmsroc6.fnal.gov:50000">
      <xc:Endpoint protocol="tcp" service="i2o"
          hostname="cmsroc6.fnal.gov" port="30001" network="tcp1"/>

    <!-- Playback Builder Unit -->
    <xc:Application class="evf::BU" id="24" instance="0" network="tcp1">
      <properties xmlns="urn:xdaq-application:evf::BU" xsi:type="soapenc:Struct">
        <replay xsi:type="xsd:boolean">false</replay>
        <queueSize xsi:type="xsd:unsignedInt">32</queueSize>
        <crc xsi:type="xsd:boolean">true</crc> 
        <eventBufferSize xsi:type="xsd:unsignedInt">0x400000</eventBufferSize> 
      </properties>
    </xc:Application>
    <xc:Module>${CMSSW_BASE}/lib/slc4_ia32_gcc345/libEventFilterAutoBU.so</xc:Module>

    <!-- FUResourceBroker -->
    <xc:Application class="evf::FUResourceBroker" id="25" instance="0" network="tcp1">
      <properties xmlns="urn:xdaq-application:evf::FUResourceBroker" xsi:type="soapenc:Struct">
        <buClassName  xsi:type="xsd:string"     >evf::BU</buClassName>
        <doCrcCheck xsi:type="xsd:unsignedInt">1</doCrcCheck> 
        <monSleepSec xsi:type="xsd:unsignedInt">30</monSleepSec> 
        <nbRawCells xsi:type="xsd:unsignedInt">32</nbRawCells>
        <nbRecoCells xsi:type="xsd:unsignedInt">8</nbRecoCells>
        <nbDqmCells xsi:type="xsd:unsignedInt">8</nbDqmCells>
        <rawCellSize xsi:type="xsd:unsignedInt">0x400000</rawCellSize>
        <recoCellSize xsi:type="xsd:unsignedInt">0x800000</recoCellSize>
        <dqmCellSize xsi:type="xsd:unsignedInt">0x800000</dqmCellSize>
      </properties>
    </xc:Application>
    <xc:Module>${CMSSW_BASE}/lib/slc4_ia32_gcc345/libEventFilterResourceBroker.so</xc:Module>

    <xc:Application class="pt::tcp::PeerTransportTCP" id="26" network="tcp1">
      <properties xmlns="urn:xdaq-application:PeerTransportTCP" xsi:type="soapenc:Struct">
        <autoSize xsi:type="xsd:boolean">true</autoSize>
        <maxPacketSize xsi:type="xsd:unsignedInt">262144</maxPacketSize>
      </properties>
    </xc:Application>
    <xc:Module>${XDAQ_ROOT}/lib/libpttcp.so</xc:Module>

  </xc:Context>

<!-- FUEventProcessor context -->
  <xc:Context url="http://cmsroc6.fnal.gov:50001">

    <xc:Application class="evf::FUEventProcessor" id="21" instance="0" network="local">
      <properties xmlns="urn:xdaq-application:FUEventProcessor" xsi:type="soapenc:Struct">
        <parameterSet xsi:type="xsd:string">file:/uscms/home/cheung/work/xml2/fu_twoOut.cfi</parameterSet>
        <runNumber xsi:type="xsd:unsignedInt">1</runNumber>
        <collReconnSec xsi:type="xsd:integer">-1</collReconnSec>
      </properties>
    </xc:Application>
    <xc:Module>$CMSSW_BASE/lib/slc4_ia32_gcc345/libEventFilterProcessor.so</xc:Module>

  </xc:Context>

<!-- StorageManager context -->
  <!-- Declare a context that contain applcation -->
  <xc:Context id = "1" url="http://cmsroc6.fnal.gov:50002">
    <xc:Endpoint protocol="tcp" service="i2o"
      hostname="cmsroc6.fnal.gov" port="60000" network="tcp1"/>

    <!-- Declare a StorageManager application -->
    <xc:Application class="StorageManager" id="29" instance="0" network="tcp1">
      <properties xmlns="urn:xdaq-application:StorageManager" xsi:type="soapenc:Struct">
        <STparameterSet     xsi:type="xsd:string">file:/uscms/home/cheung/work/xml2/sm_stage1.cfi</STparameterSet>
        <runNumber          xsi:type="xsd:unsignedInt">1</runNumber>
        <maxESEventRate     xsi:type="xsd:double">5.0</maxESEventRate>
        <consumerQueueSize  xsi:type="xsd:integer">7</consumerQueueSize>
        <DQMmaxESEventRate  xsi:type="xsd:double">1.0</DQMmaxESEventRate>
        <DQMconsumerQueueSize xsi:type="xsd:integer">9</DQMconsumerQueueSize>
        <nLogicalDisk       xsi:type="xsd:integer">0</nLogicalDisk> 
        <fileName           xsi:type="xsd:string">storageManager</fileName> 
        <filePath           xsi:type="xsd:string">/scratch2/cheung</filePath> 
        <setupLabel         xsi:type="xsd:string">test</setupLabel> 
        <highWaterMark      xsi:type="xsd:double">0.9</highWaterMark>
        <lumiSectionTimeOut xsi:type="xsd:double">10.0</lumiSectionTimeOut>
        <fileCatalog        xsi:type="xsd:string">summaryCatalog.txt</fileCatalog> 
        <exactFileSizeTest  xsi:type="xsd:boolean">false</exactFileSizeTest>
        <pushMode2Proxy     xsi:type="xsd:boolean">false</pushMode2Proxy>
        <collateDQM         xsi:type="xsd:boolean">false</collateDQM>
        <archiveDQM         xsi:type="xsd:boolean">false</archiveDQM>
        <filePrefixDQM      xsi:type="xsd:string">/scratch2/cheung/dqm</filePrefixDQM>
        <purgeTimeDQM       xsi:type="xsd:integer">120</purgeTimeDQM>
        <readyTimeDQM       xsi:type="xsd:integer">10</readyTimeDQM>
        <useCompressionDQM  xsi:type="xsd:boolean">true</useCompressionDQM>
        <compressionLevelDQM xsi:type="xsd:integer">1</compressionLevelDQM>
      </properties>
    </xc:Application>
    <xc:Module>$CMSSW_BASE/lib/slc4_ia32_gcc345/libEventFilterStorageManager.so</xc:Module>

    <xc:Application class="pt::tcp::PeerTransportTCP" id="31" network="tcp1">
      <properties xmlns="urn:xdaq-application:PeerTransportTCP" xsi:type="soapenc:Struct">
        <autoSize xsi:type="xsd:boolean">true</autoSize>
        <maxPacketSize xsi:type="xsd:unsignedInt">262144</maxPacketSize>
      </properties>
    </xc:Application>
    <xc:Module>${XDAQ_ROOT}/lib/libpttcp.so</xc:Module>

  </xc:Context>

</xc:Partition>
